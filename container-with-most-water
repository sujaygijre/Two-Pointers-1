class Solution {
public:
    int maxArea(vector<int>& height) {
        int left=0;
        int right=height.size()-1;
        int maxi = 0;
        int currArea = 0;
        while (left < right) {
            currArea = min(height[left], height[right])*(right-left);
            maxi = max(currArea, maxi);

            if (height[left] < height[right]) {
                left++;
            } else {
                right--;
            }
        }
        return maxi;
    }
};
